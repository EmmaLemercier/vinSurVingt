{% extends "base.html.twig" %}

 {% block content %}
    <div class="row">
       <div class="offset-lg-1 col-lg-10">
           <div class="row" id="topBar">
               <div class="col-lg-1 box-picto-nav">
                   <a href="#">
                       <i class="fas fa-home"></i>
                   </a>
               </div>
               <div class="offset-lg-10 col-lg-1 box-picto-nav" id="box-picto-logout">
                    <a href="#">
                       <i class="fas fa-power-off"></i>
                   </a>
               </div>
           </div>
           <div class="row">
               <ul class="nav nav-tabs col-lg-12" id="myTab" role="tablist">
                   <li class="nav-item col-lg-3">                       
                        <a class="nav-link active" id="bouteille-tab" data-toggle="tab" href="#bouteille" role="tab" aria-controls="bouteille" aria-selected="true">Bouteille</a>
                   </li>
                   <li class="nav-item col-lg-3">
                       <a class="nav-link" id="membre-tab" data-toggle="tab" href="#membre" role="tab" aria-controls="membre" aria-selected="false">Membre</a>
                   </li>
                   <li class="nav-item col-lg-3">
                       <a class="nav-link" id="pointDeVente-tab" data-toggle="tab" href="#pointDeVente" role="tab" aria-controls="pointDeVente" aria-selected="false">Point de vente</a>
                   </li>
               </ul>
           </div>
           <div class="row">
               <div class="tab-content col-lg-12" id="myTabContent">                   
                    <div class="tab-pane active" id="bouteille" role="tabpanel" aria-labelledby="bouteille-tab">
                        {% block flashBag %}
                            {% for message in app.session.flashbag.get("info") %}
                                <div class="alert alert-success alert-dismissable fade show " role="alert" class="col-lg-12">
                                    {{ message }}
                                </div>    
                            {% endfor %}
                        {% endblock flashBag %}
                            {{ render(controller("App\\Controller\\BouteilleController::formulaireRechercherBouteillesAction")) }}
                        {% block response %}
                        {% endblock response %}
                    </div>
                    <div class="tab-pane fade" id="membre" role="tabpanel" aria-labelledby="membre-tab">
                        
                    </div>
                        <div class="tab-pane fade" id="pointDeVente" role="tabpanel" aria-labelledby="pointDeVente-tab">Ici s'afficheront les points de vente</div>

               </div>
           </div>
       </div>
   </div>
{% endblock content %}